# Dockerfile para Frontend (HTML/CSS/JS) com Nginx
FROM nginx:alpine

COPY uday-app/frontend /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf.template
COPY entrypoint.sh /entrypoint.sh

RUN chmod +x /entrypoint.sh

# Expor a porta 8- usada pelo Nginx
EXPOSE 80

# Entrypoint
ENTRYPOINT [ "/entrypoint.sh" ]

